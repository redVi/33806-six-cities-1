{
  "name": "six-cities",
  "version": "1.0.0",
  "private": true,
  "homepage": "https://redvi.github.io/six-cities",
  "description": "Select best offers from sities",
  "scripts": {
    "build": "webpack --mode production",
    "start": "webpack-dev-server",
    "eslint": "eslint src/**/*.tsx src/**/*.ts",
    "test": "npm run eslint && jest"
  },
  "dependencies": {
    "axios": "0.19.2",
    "leaflet": "1.6.0",
    "react": "16.13.0",
    "react-dom": "16.13.0",
    "react-redux": "7.2.0",
    "react-router-dom": "5.1.2",
    "redux": "4.0.5",
    "redux-thunk": "2.3.0",
    "reselect": "4.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.8.7",
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@babel/preset-env": "7.8.7",
    "@babel/preset-react": "7.8.3",
    "@types/enzyme": "3.10.5",
    "@types/enzyme-adapter-react-16": "1.0.6",
    "@types/jest": "25.1.4",
    "@types/react": "16.9.23",
    "@types/react-redux": "7.1.7",
    "@types/react-router-dom": "5.1.3",
    "@typescript-eslint/parser": "2.23.0",
    "babel-jest": "25.1.0",
    "babel-loader": "8.0.6",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.2",
    "eslint": "6.8.0",
    "eslint-plugin-react": "7.19.0",
    "jest": "25.1.0",
    "react-test-renderer": "16.13.0",
    "ts-jest": "25.2.1",
    "ts-loader": "6.2.1",
    "typescript": "3.8.3",
    "utility-types": "3.10.0",
    "webpack": "4.42.0",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "3.10.3"
  },
  "engines": {
    "node": ">=10"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "@/(.*)$": "<rootDir>/src/$1"
    },
    "setupFiles": [
      "./src/setup-tests.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": "babel-jest"
    },
    "testRegex": ".test.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
